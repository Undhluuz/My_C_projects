<Window x:Class="SimpleAccounting.AddOperationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Operation" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Date:" Grid.Row="0"/>
        <DatePicker x:Name="DateDatePicker" Grid.Row="0" Margin="5" SelectedDate="{Binding Date}"/>

        <Label Content="Amount:" Grid.Row="1"/>
        <TextBox x:Name="AmountTextBox" Grid.Row="1" Margin="5" Text="{Binding Amount}"/>

        <Label Content="Operation Type:" Grid.Row="2"/>
        <ComboBox x:Name="OperationTypeComboBox" Grid.Row="2" Margin="5" ItemsSource="{Binding OperationTypes}" SelectedValue="{Binding OperationType}"/>

        <Label Content="Counterparty:" Grid.Row="3"/>
        <ComboBox x:Name="CounterpartyComboBox" Grid.Row="3" Margin="5" ItemsSource="{Binding Counterparties}" SelectedValue="{Binding CounterpartyId}" DisplayMemberPath="Name"/>

        <Label Content="Category:" Grid.Row="4"/>
        <ComboBox x:Name="CategoryComboBox" Grid.Row="4" Margin="5" ItemsSource="{Binding Categories}" SelectedValue="{Binding CategoryId}" DisplayMemberPath="Name"/>

        <Label Content="Description:" Grid.Row="5"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Row="5" Margin="5" Text="{Binding Description}" AcceptsReturn="True" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Command="{Binding AddCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>